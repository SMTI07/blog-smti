<%= simple_form_for(@subject) do |f| %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= render 'form/error', form: @subject %>
        <div class="panel panel-default panel-custom">
          <div class="panel-heading">
            <ul class="list-inline" style="margin: 0px;">
              <li>
                <h4><%= action_name.capitalize %> Subject</h4>
              </li>
              <li class="pull-right">
                <%= link_to 'Back', subjects_path, class: 'btn btn-default btn-custom' %>
              </li>
            </ul>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-12">
                <%= f.input :name, label: false, placeholder: 'Nama Mata Kuliah' %>
              </div>
            </div>
            <div class="text-right">
              <%= f.button :submit, class: 'btn btn-default btn-custom' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
