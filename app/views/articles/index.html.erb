

<p id="notice"><%= notice %></p>
<%provide(:page_title, "Artikel") %>
<h1>Articles</h1>

<div class="tags-cloud glassy-bg">
  <h4>Tags Cloud</h4>
  <% tag_cloud Tag.counts, %w{css1 css2 css3 css4} do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Judul</th>
      <th>Konten</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody  >
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>

        <td><%=  truncate(strip_tags(article.content) , length:30)%></td>
        <td><%=raw tag_links(article.all_tags)%></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
