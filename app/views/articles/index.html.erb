<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<%= link_to 'New Article', new_article_path %>

<body>
<div class="container">
    <div class="row">
        <div class="col-sm-10">
            <div class="panel-group">
                <% @articles.each do |article| %>
                  <div class="panel panel-default">
                      <div class="panel-heading"><h3 class="text-center"><%= link_to article.title, article%></h3></div>
                      <div class="panel-body"><p class="text-justify"><%= article.content.truncate(500) %> <%= link_to 'continue reading', article%> </p></div>
                  </div>
                <% end %>

                <%= will_paginate %>
             </div>
        </div>
    </div>
</div>
</body>





