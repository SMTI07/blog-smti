<table class="table table-striped">
  <thead>
    <tr>
      <th>Judul</th>
      <th>Konten</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody  >
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>

        <td><%=  truncate(strip_tags(article.content) , length:30)%></td>
        <td><%=raw tag_links(article.all_tags)%></td>
        <td><%= link_to 'visibility' ,article, class:'btn btn-success material-icons btn-a-white' %></td>
        <td><%= link_to 'edit', edit_article_path(article),  class:'btn btn-primary material-icons btn-a-white' %></td>
        <td><%= link_to 'delete', article, method: :delete, data: { confirm: 'Are you sure?' },  class:'btn btn-danger material-icons btn-a-white' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

