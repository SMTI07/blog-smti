<p id="notice"><%= notice %></p>
<div class="row">
  <div class = "col-md-12">
    <div class="page-header">
      <ul class="breadcrumb">
        <li><%= link_to "Beranda", articles_path %></li>
        <li class="active"><%= @article.title %></li>
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h3><%= @article.created_at.strftime("%F") %></h3>
      <h4>Author</h4>
    </div>
    <div class="col-md-8">
      <h1><%= @article.title %></h1>
      <p><%= @article.content %></p>
      <h4>Tags</h4>
      <p><a href="#">#post</a></p>
    </div>
    <div class="col-md-2">
      <%= link_to 'Edit', edit_article_path(@article) %> |
      <%= link_to 'Back', articles_path %>
    </div>
  </div>
</div>
